<h1>Topics</h1>

<div class="row">
	<div class="span-8">
	<h1>Popular</h1>
    <p class="lead">Active posts this week</p>
    <%= render partial: 'posts/post', collection: @posts %>
    <%= will_paginate @posts %>
   </div>
		<% @topics.each do |topic| %>
		<div class="media">
			<div class="media-body">
				<h4 class="media-heading">
					<%= link_to topic.name, topic %>
				</h4>
				<small>
					<%= topic.description %>
				</small>
			</div>
		</div>
		<% end %>
		<%= will_paginate @topics %>
	</div>
	<div class="span-4">
		<% if can? :create, Topic %>
		<%= link_to "New Topic", new_topic_path, class: 'btn btn-large btn-block' %>
		<% end %>
	</div>

</div>